    "dotenv": "^16.3.1",
    "humanize-duration": "^3.31.0",
    "pocketbase": "^0.26.8"
  },
  "devDependencies": {
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
