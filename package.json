{
  "name": "rpg-bot-ts",
  "version": "2.0.0",
  "description": "RPG Discord Bot with TypeScript and Event-Driven Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
